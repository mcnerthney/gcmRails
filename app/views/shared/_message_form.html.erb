<%= form_for(@message) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">

    <%= f.text_area :body, placeholder: "Compose new micropost..." %>
  </div>
  <%= f.hidden_field :phone_id, :value => @phone_id %>
  <%= f.submit "Post", class: "btn btn-large btn-primary" %>
<% end %>